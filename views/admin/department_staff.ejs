<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff in Department</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .role-indicator {
            display: inline-block;
            width: 15px;
            height: 15px;
            border-radius: 50%;
        }
        .manager {
            background-color: #4CAF50;
        }
        .staff {
            background-color: #FFC107;
        }
        .role-cell {
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left">
                <a href="/home">
                    <img src="/img/G5.png" alt="Company Logo" class="logo">
                </a>
                <a href="/admin/all_staff">
                    <button class="nav-button" aria-label="Navigate to staff management page">Staff</button>
                </a>
                <a href="/admin/all_skills">
                    <button class="nav-button" aria-label="Navigate to skills management page">Skills</button>
                </a>
                <a href="/admin/all_skill_categories">
                    <button class="nav-button" aria-label="Navigate to skill categories page">Skill Categories</button>
                </a>
                <a href="/admin/all_departments">
                    <button class="nav-button active" aria-label="Navigate to departments management page">Departments</button>
                </a>
                <a href="/admin/all_job_roles" aria-label="Navigate to job role management page"><button class="nav-button">Job Roles</button></a>
            </div>
            <div class="navbar-right">
                <form action="/logout" method="POST" style="display:inline;">
                    <button type="submit" class="logout-button" aria-label="Log out from the system">Log out</button>
                </form>
            </div>
        </div>
        <h2 class="breadcrumb-h2">
            <a href="/admin/all_departments">All Departments</a> &nbsp;&gt;&nbsp;
            <span><%= department.department_name %></span> &nbsp;&gt;&nbsp;
            <span>Staff</span>
        </h2>
    </header>
    <div class="admin-content">
        <div class="staff-table-container">
            <table class="staff-table">
                <thead>
                    <tr>
                        <th></th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Job Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="role-cell" aria-label="User role">
                                <% if (user.systemRole.system_role_name === 'MANAGER') { %>
                                    <div class="role-indicator manager" aria-label="Manager role"></div>
                                <% } else { %>
                                    <div class="role-indicator staff" aria-label="Staff role"></div>
                                <% } %>
                            </td>                            
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.jobRole.job_role_name %></td>                 
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="action-buttons">
        <a href="/admin/all_departments">
            <button class="blue-button" aria-label="Back to departments list">Back to All Departments</button>
        </a>
    </div>
</body>
</html>