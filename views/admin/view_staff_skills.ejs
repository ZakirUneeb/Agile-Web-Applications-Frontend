<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Staff Skills</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left">
                <a href="/home">
                    <img src="/img/G5.png" alt="Company Logo" class="logo">
                </a>
                <a href="/admin/all_staff"><button class="nav-button active">Staff</button></a>
                <a href="/admin/all_skills"><button class="nav-button">Skills</button></a>
                <a href="/admin/all_departments"><button class="nav-button">Departments</button></a>
            </div>
            <div class="navbar-right">
                <form action="/logout" method="POST" style="display:inline;">
                    <button type="submit" class="logout-button" aria-label="Log out from the system">Log out</button>
                </form>
            </div>
        </div>
        <h2 class="breadcrumb-h2">
            <a href="/admin/all_staff">All Staff</a> &nbsp;&gt;&nbsp;
            <span><%= user.first_name %> <%= user.last_name %></span> &nbsp;&gt;&nbsp;
            <span>Skills</span>
        </h2>
    </header>
    <div class="content">
        <% if (skills.length > 0) { %>
            <div class="staff-table-container">
                <table class="staff-table">
                    <thead>
                        <tr>
                            <th scope="col">Skill Name</th>
                            <th scope="col">Skill Strength</th>
                            <th scope="col">Expiry Date</th>
                            <th scope="col">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% skills.forEach(skill => { %>
                            <tr>
                                <td><%= skill.skill.skill_name %></td>
                                <td><%= skill.skillStrength.skill_strength_name %></td>
                                <td><%= new Date(skill.expiry_date).toLocaleDateString() %></td>
                                <td><%= skill.notes %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p>No skills available for this user.</p>
        <% } %>
    </div>

    <div class="action-buttons">
        <button id="assignSkillBtn" class="green-button" aria-label="Assign a new skill">Assign New Skill</button>
        <button id="editSkillBtn" class="purple-button" aria-label="Edit the selected skill">Edit Selected Skill</button>
        <button id="deleteSkillBtn" class="red-button" aria-label="Delete the selected skill">Delete Selected Skill</button>
        <a href="/admin/all_staff"><button class="blue-button" aria-label="Return to all staff">Back to All Staff</button></a>
    </div>
</body>
</html>
