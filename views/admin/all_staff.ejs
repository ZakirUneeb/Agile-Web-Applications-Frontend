<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Staff</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left">
                <a href="/home">
                    <img src="/img/G5.png" alt="Logo" class="logo">
                </a>
                <a href="/admin/all_staff"><button class="nav-button active">All Staff</button></a>
                <a href="/admin/all_skills"><button class="nav-button">All Skills</button></a>
                <a href="/admin/all_departments"><button class="nav-button">All Departments</button></a>
            </div>
            <div class="navbar-right">
                <form action="/logout" method="POST" style="display:inline;">
                    <button type="submit" class="logout-button">Log out</button>
                </form>
            </div>
        </div>
        <div class="content">
            <h3>All Staff</h3>
            <div class="staff-list">
                <% staffMembers.forEach(function(staff) { %>
                    <div class="staff-member">
                        <div class="radio-container">
                            <input type="radio" id="staff_<%= staff.user_id %>" name="selectedStaff" value="<%= staff.user_id %>" />
                        </div>
                        <div class="staff-info">
                            <label for="staff_<%= staff.user_id %>">
                                <div class="staff-detail">
                                    <div class="staff-name"><strong><%= staff.first_name %> <%= staff.last_name %></strong></div>
                                    <span class="staff-department"><%= staff.department.department_name %></span>
                                    <span class="staff-role"><%= staff.jobRole.job_role_name %></span>
                                </div>
                            </label>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="action-buttons">
                <button onclick="viewDetails()">View Details</button>
                <button onclick="editStaff()">Edit Staff</button>
                <button onclick="deleteStaff()">Delete Staff</button>
            </div>
        </div>
    </header>

    <script>
        function getSelectedStaffId() {
            const selectedStaff = document.querySelector('input[name="selectedStaff"]:checked');
            return selectedStaff ? selectedStaff.value : null;
        }

        function viewDetails() {
            const selectedId = getSelectedStaffId();
            if (selectedId) {
                window.location.href = `/admin/view_staff/${selectedId}`;
            } else {
                alert("Please select a staff member.");
            }
        }

        function editStaff() {
            const selectedId = getSelectedStaffId();
            if (selectedId) {
                window.location.href = `/admin/edit_staff/${selectedId}`;
            } else {
                alert("Please select a staff member.");
            }
        }

        async function deleteStaff() {
            const selectedId = getSelectedStaffId();
            if (selectedId) {
                if (confirm("Are you sure you want to delete the selected staff?")) {
                    // Delete functionality to be written
                }
            } else {
                alert("Please select a staff member.");
            }
        }
    </script>
</body>
</html>
